.col-xs-12.col-sm-10.col-sm-offset-1.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4.col-xl-4.col-xl-offset-4
  div(ng-repeat='item in vm.results' sm-view item='item')
  div(style='background:color: grey; display:flex;justify-content:center;align-items:center;height:600px' ng-show='vm.loading || vm.results.length === 0')
    h1.m-t(ng-show='vm.results.length === 0 && !vm.loading') No results
    i.fa.fa-5x.fa-spinner.fa-spin(ng-show='vm.loading')
